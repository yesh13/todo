<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="domain.Activity" table="activity">
   

      <meta attribute="class-description">
         This class contains the activity detail. 
      </meta>
      <id name="aid" type="int" column="aid">
         <generator class="native"/>
      </id>
            <discriminator column="schedule_type" type="string"/>
      <property name="uid" column="uid" type="int"/>
      <property name="parentId" column="parent" type="int"></property>
      <property name="name" column="name" type="string"/>
       <subclass name="domain.Task" discriminator-value="0">
         <property name="startTime" column="start_time" type="calendar"/>
         <property name="deadline" column="end_time" type="calendar"/>
         <property name="finishTime" column="finish_time" type="calendar"/>
         <property name="state" column="task_state" >
           <type name="org.hibernate.type.EnumType">
        <param name="enumClass">domain.Task$State</param>
    </type>
         </property>
    	</subclass>
    	 <subclass name="domain.Appointment" discriminator-value="1">
         <property name="startTime" column="start_time" type="calendar"/>
         <property name="finishTime" column="end_time" type="calendar"/>
    	</subclass>     

   </class>
</hibernate-mapping>